{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "types": ["node"],
    "outDir": "build",
    "rootDir": "src"
  },
  "include": [
    "src/main/**/*.ts",
    "src/shared/**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": ["src/preload.ts", "src/renderer"]
}
