{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "types": ["node", "jest"]
  },
  "include": [
    "src/main/**/*.ts",
    "src/preload.ts",
    "src/renderer/**/*.d.ts",
    "src/renderer/types/**/*.d.ts",
    "src/types/**/*.d.ts",
    "src/shared/**/*.ts"
  ]
}
