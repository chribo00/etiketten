{
  "name": "etiketten",
  "version": "0.1.0",
  "private": true,
  "main": "src/main/main.ts",
  "scripts": {
    "dev": "npm run build:preload && concurrently -k \"npm:dev:renderer\" \"npm:dev:main\"",
    "dev:renderer": "vite --config vite.config.mts",
    "dev:main": "wait-on http://localhost:5173 && electron ./dev-main.cjs",
    "build:preload": "tsc src/preload.ts --outDir build --module commonjs --target ES2020 --esModuleInterop",
    "build:renderer": "vite build",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "npm run build:renderer && electron-builder",
    "rebuild-native": "electron-rebuild -f -w better-sqlite3 -w sharp",
    "postinstall": "electron-builder install-app-deps",
    "test": "echo \"No tests configured\" && exit 0",
    "typecheck": "tsc -p tsconfig.main.json --noEmit"
  },
  "dependencies": {
    "electron": "^30.0.0",
    "electron-updater": "^6.1.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-router-dom": "^6.0.0",
    "@fluentui/react": "^8.0.0",
    "@fluentui/react-components": "^9.0.0",
    "@fluentui/react-icons": "^2.0.0",
    "better-sqlite3": "^9.0.0",
    "bwip-js": "^4.0.0",
    "pdfkit": "^0.13.0",
    "sharp": "^0.33.0",
    "adm-zip": "^0.5.10",
    "fast-csv": "^4.3.6",
    "iconv-lite": "^0.6.3",
    "zod": "^3.22.0",
    "jsbarcode": "^3.11.5",
    "jspdf": "^2.5.1"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "ts-node": "^10.9.1",
    "vite": "^5.0.0",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.0",
    "wait-on": "^7.0.0",
    "electron-builder": "^24.0.0",
    "electron-rebuild": "^3.2.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/pdfkit": "^0.13.5",
    "@types/bwip-js": "^2.0.0",
    "@types/adm-zip": "^0.5.0",
    "@vitejs/plugin-react": "^5.0.0"
  },
  "build": {
    "appId": "com.cloudia.etiketten",
    "productName": "Etiketten",
    "files": [
      "dist/**",
      "src/main/**",
      "build/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}